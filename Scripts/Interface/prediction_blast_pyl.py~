#!/usr/bin/python
# -*- coding: iso-8859-1 -*-
# -*- coding: utf-8 -*-
import sys 
import os 
import re 

try:
    import wx
except ImportError:
    raise ImportError,"The wxPython module is required to run this program"

class simpleapp_wx(wx.Frame):
	def __init__(self,parent,id,title):
	        wx.Frame.__init__(self,parent,id,title,size=(500,350))
	        self.parent = parent
		self.initialize()
	

	def initialize(self):
	        sizer = wx.GridBagSizer(5,20)
		
		label_titre_prediction=wx.StaticText(self,-1,label="PREDICTION PROTEINES PYL")
		font=wx.Font(12,wx.NORMAL,wx.NORMAL,wx.BOLD)
		label_titre_prediction.SetFont(font)
		sizer.Add(label_titre_prediction,(1,1),(1,3),wx.EXPAND)	

		line=wx.StaticLine(self,-1)
		sizer.Add(line,(2,0),(1,5),wx.EXPAND)	

		vide=wx.StaticText(self,-1,label="\t")
		sizer.Add(vide,(0,4),(1,1))
	
		label_genome=wx.StaticText(self,-1,label="Génome complet (fasta)") 
		sizer.Add(label_genome,(3,1),(1,1),wx.EXPAND)

		filepicker_genome=wx.FilePickerCtrl(self,-1)
		sizer.Add(filepicker_genome,(4,1),(1,1),wx.EXPAND)

		label_cds=wx.StaticText(self,-1,label="CDS prédits (fasta)")
		sizer.Add(label_cds,(3,3),(1,1),wx.EXPAND)

		filepicker_cds=wx.FilePickerCtrl(self,-1) 
		sizer.Add(filepicker_cds,(4,3),(1,1),wx.EXPAND)

		label_result=wx.StaticText(self,-1,label="Dossier résultats")
		sizer.Add(label_result,(6,1),(1,1),wx.EXPAND)

		dirpicker_result=wx.DirPickerCtrl(self,-1)
		sizer.Add(dirpicker_result,(7,1),(1,1),wx.EXPAND)

		label_titre_blast=wx.StaticText(self,-1,label="BLAST")
		font=wx.Font(12,wx.NORMAL,wx.NORMAL,wx.BOLD)
		label_titre_blast.SetFont(font)
		sizer.Add(label_titre_blast,(9,1),(1,3),wx.EXPAND)	

		line=wx.StaticLine(self,-1)
		sizer.Add(line,(10,0),(1,5),wx.EXPAND)

		label_titre_exe_blast=wx.StaticText(self,-1,label="Execution")
		font=wx.Font(11,wx.NORMAL,wx.NORMAL,wx.BOLD)
		label_titre_exe_blast.SetFont(font)
		sizer.Add(label_titre_exe_blast,(11,1),(1,2),wx.EXPAND)

		label_type_blast=wx.StaticText(self,-1,label="Type Blast") 
		sizer.Add(label_type_blast,(12,1),(1,1),wx.EXPAND)

		list_blast=['blastp','blastx','blastn','tblastn','tblastx']
		choice_blast=wx.Choice(self,-1,choices=list_blast)
		sizer.Add(choice_blast,(13,1),(1,1),wx.EXPAND)

		label_titre_traitement=wx.StaticText(self,-1,label="Traitement")
		font=wx.Font(11,wx.NORMAL,wx.NORMAL,wx.BOLD)
		label_titre_traitement.SetFont(font)
		sizer.Add(label_titre_traitement,(11,3),(1,2),wx.EXPAND)

		label_evalue=wx.StaticText(self,-1,label="E-value minimum") 
		sizer.Add(label_evalue,(12,3),(1,1),wx.EXPAND)

		text_evalue=wx.TextCtrl(self,-1) 
		sizer.Add(text_evalue,(13,3),(1,1),wx.EXPAND)

		label_result_blast=wx.StaticText(self,-1,label="Dossier résultats Blast")
		sizer.Add(label_result_blast,(15,1),(1,1),wx.EXPAND)
		
		dirpicker_result_blast=wx.DirPickerCtrl(self,-1) 
		sizer.Add(dirpicker_result_blast,(16,1),(1,1),wx.EXPAND)

		button=wx.Button(self,-1,label="OK")
		font=wx.Font(12,wx.NORMAL,wx.NORMAL,wx.BOLD) 
		button.SetFont(font)
		button.SetBackgroundColour("lightgrey")
		sizer.Add(button,(18,1),(1,3),wx.EXPAND)

		panel=wx.Panel(self,-1)
		sizer.Add(panel,(19,0),(1,5),wx.EXPAND)
		
		self.SetSizerAndFit(sizer)
		self.Show(True)


	
if __name__ == "__main__":
    app = wx.App()
    frame = simpleapp_wx(None,-1,'Prediction protéines PYL')
    app.MainLoop()
